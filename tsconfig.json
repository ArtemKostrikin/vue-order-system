{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node",  // Используем Node для правильного разрешения модулей
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Vuex Typings */
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vuex/types",
      "./node_modules/pinia/types",
      "./node_modules/vue/types"  // Добавляем типы для Vue
    ]
  },
  "include": [
    "src",
    "eslint.config.js",
    "vite.config.ts"
  ]
}
